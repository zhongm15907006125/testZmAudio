<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="makePhoneCall"
        android:onClick="makePhoneCall"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="getSystemRecord"
        android:onClick="getSystemRecord"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="deleteSystemRecording"
        android:onClick="deleteSystemRecording"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="isOpenRecord"
        android:onClick="isOpenRecord"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="openRecordSetting"
        android:onClick="openRecordSetting"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="hasSimCard"
        android:onClick="hasSimCard"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="openSelfPermissionSetting"
        android:onClick="openSelfPermissionSetting"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="getAllRecordFiles"
        android:onClick="getAllRecordFiles"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="getTop5RecordFiles"
        android:onClick="getTop5RecordFiles"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="uploadRecordFile"
        android:onClick="uploadRecordFile"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="initPermission"
        android:onClick="initPermission"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="endCall"
        android:onClick="endCall"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="requsetIgnoreBattery"
        android:onClick="requsetIgnoreBattery"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="startForegroundService"
        android:onClick="startForegroundService"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="stopForegroundService"
        android:onClick="stopForegroundService"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="getSimInfo"
        android:onClick="getSimInfo"
        />

</LinearLayout>
</ScrollView>